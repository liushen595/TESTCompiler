{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake: configure active file",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/bin/build",
                "-DCURRENT_FILE=${file}",
                "-S",
                "${workspaceFolder}",
                "-A",
                "x64"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "cmake: debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/bin/build",
                "--config",
                "Debug",
                "--target",
                "TESTCompiler"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "cmake: configure active file"
            ]
        },
        {
            "label": "cmake: release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/bin/build",
                "--config",
                "Release",
                "--target",
                "TESTCompiler"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "cmake: configure active file"
            ]
        },
        {
            "label": "cmake: clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/bin/build",
                "--config",
                "Debug",
                "--target",
                "clean"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
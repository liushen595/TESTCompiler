        },
        {
            "name": "(GDB) Launch TESTCompiler",
            "type": "cppdbg", // 从 cppvsdbg 改为 cppdbg
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}", // 使用这个变量更通用
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb", // <-- 指定使用 GDB
            "miDebuggerPath": "D:\\Dev\\mingw64\\bin\\gdb.exe" // <-- 指定你的 gdb.exe 路径，请根据你的实际安装位置修改
        }
    ]
